<!DOCTYPE html>
<html>
<head>
  <script src="bower_components/webcomponentsjs/webcomponents.js"></script>
    <link rel="import" href="bower_components/mjpeg-video-webcomponent/mjpeg-video.html">
  </head>
<body>
  <div class="container">
    <div class="row">
      <h3>Sony DSCQX100</h3>
    </div>
    <div class="row">
      <div class="col-md-7"><mjpeg-video src='http://localhost:4567/live'  style='width: 640px; height:424px;'></mjpeg-video>
      </div>


      <div class="col-md-5">
      <div class="panel panel-default ">
        <div class="panel-heading">
          <h3 class="panel-title">Zoom</h3>
        </div>
        <div class="panel-body">
          <button class="btn btn-default" type="button" id="zoom_in">Zoom In</button>
          <button class="btn btn-default" type="button" id="zoom_out">Zoom Out</button>
        </div>
      </div>

      <div class="panel panel-default ">
        <div class="panel-heading">
          <h3 class="panel-title">Exposure Mode: <span id="exposure_mode"></span></h3>
        </div>
        <div class="panel-body">
          <button class="btn btn-default" type="button" id="e_intelligent">Intelligent</button>
          <button class="btn btn-default" type="button" id="e_superior">Superior</button>
          <button class="btn btn-default" type="button" id="e_program">Program</button>
          <button class="btn btn-default" type="button" id="e_aperture">Aperture</button>
          <button class="btn btn-default" type="button" id="e_shutter">Shutter</button>
        </div>
      </div>

      <div class="panel panel-default ">
        <div class="panel-heading">
          <h3 class="panel-title">ISO: <span id="iso"></h3>
        </div>
        <div class="panel-body">
          <!-- [["AUTO", "160", "200", "400", "800", "1600", "3200", "6400", "12800"]]  -->
          <button class="btn btn-default set_iso" type="button" value='AUTO'>Auto</button>
          <button class="btn btn-default set_iso" type="button" value='160'>160</button>
          <button class="btn btn-default set_iso" type="button" value='200'>200</button>
          <button class="btn btn-default set_iso" type="button" value='400'>400</button>
          <button class="btn btn-default set_iso" type="button" value='800'>800</button>
          <button class="btn btn-default set_iso" type="button" value='1600'>1600</button>
          <button class="btn btn-default set_iso" type="button" value='3200'>3200</button>
          <button class="btn btn-default set_iso" type="button" value='6400'>6400</button>
          <button class="btn btn-default set_iso" type="button" value='12800'>12800</button>
        </div>
      </div>

      <!-- [["1.8", "2.0", "2.2", "2.5", "2.8", "3.2", "3.5", "4.0", "4.5", "4.9", "5.0", "5.6", "6.3", "7.1", "8.0", "9.0", "10", "11"]]  -->

      <div class="panel panel-default ">
        <div class="panel-heading">
          <h3 class="panel-title">Aperture: <span id="aperture"></h3>
        </div>
        <div class="panel-body">
          <button class="btn btn-default set_f" type="button" value='1.8'>1.8</button>
          <button class="btn btn-default set_f" type="button" value='2.0'>2.0</button>
          <button class="btn btn-default set_f" type="button" value='2.2'>2.2</button>
          <button class="btn btn-default set_f" type="button" value='2.5'>2.5</button>
          <button class="btn btn-default set_f" type="button" value='2.8'>2.8</button>
          <button class="btn btn-default set_f" type="button" value='3.2'>3.2</button>
          <button class="btn btn-default set_f" type="button" value='3.5'>3.5</button>
          <button class="btn btn-default set_f" type="button" value='4.0'>4.0</button>
          <button class="btn btn-default set_f" type="button" value='4.5'>4.5</button>
          <button class="btn btn-default set_f" type="button" value='4.9'>4.9</button>
          <button class="btn btn-default set_f" type="button" value='5.0'>5.0</button>
          <button class="btn btn-default set_f" type="button" value='5.6'>5.6</button>
          <button class="btn btn-default set_f" type="button" value='6.3'>6.3</button>
          <button class="btn btn-default set_f" type="button" value='7.1'>7.1</button>
          <button class="btn btn-default set_f" type="button" value='8.0'>8.0</button>
          <button class="btn btn-default set_f" type="button" value='9.0'>9.0</button>
          <button class="btn btn-default set_f" type="button" value='10'>10</button>
          <button class="btn btn-default set_f" type="button" value='11'>11</button>
        </div>
      </div>

<!-- [["30\"", "25\"", "20\"", "15\"", "13\"", "10\"", "8\"", "6\"", "5\"", "4\"", "3.2\"", "2.5\"", "2\"", "1.6\"", "1.3\"", "1\"", "0.8\"", "0.6\"", "0.5\"", "0.4\"", "1/3", "1/4", "1/5", "1/6", "1/8", "1/10", "1/13", "1/15", "1/20", "1/25", "1/30", "1/40", "1/50", "1/60", "1/80", "1/100", "1/125", "1/160", "1/200", "1/250", "1/320", "1/400", "1/500", "1/640", "1/800", "1/1000", "1/1250", "1/1600", "1/2000"]] -->


      <div class="panel panel-default ">
        <div class="panel-heading">
          <h3 class="panel-title">Shutter Speed: <span id="shutter"></h3>
        </div>
        <div class="panel-body">
          <%  ["30\"", "25\"", "20\"", "15\"", "13\"", "10\"", "8\"", "6\"", "5\"", "4\"", "3.2\"", "2.5\"", "2\"", "1.6\"", "1.3\"", "1\"", "0.8\"", "0.6\"", "0.5\"", "0.4\"", "1/3", "1/4", "1/5", "1/6", "1/8", "1/10", "1/13", "1/15", "1/20", "1/25", "1/30", "1/40", "1/50", "1/60", "1/80", "1/100", "1/125", "1/160", "1/200", "1/250", "1/320", "1/400", "1/500", "1/640", "1/800", "1/1000", "1/1250", "1/1600", "1/2000"].each do |shutter| %>
              <button class="btn btn-default set_s" type="button" value='<%=shutter%>'><%=shutter%></button>
          <% end %>
        </div>
      </div>



      <div class="panel panel-default ">
        <div class="panel-body">
          <button class="btn btn-primary" type="button" id="take_pic">Take Picture</button>
          <span id="images"></span>
        </div>
      </div>

      </div>





      </div>
    </div>


  </div>
</body>
</html>
